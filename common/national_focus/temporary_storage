	focus = {#Diplomacy - CES - start
		id = enc_CES_start
		icon = GFX_goal_legion_generic_focus 
		ai_will_do = { factor = 1 } 
		relative_position_id = enc_NCR_seak_allies
		x = -2
		y = 1
		cost = 5.8 
		prerequisite = { focus = enc_NCR_seak_allies }
		available = {		
			country_exists = CES
			NOT = {
				has_war_with = CES
			}			
		}
		completion_reward = {
			CES = {
				custom_effect_tooltip = relations_increased_20
			}
			hidden_effect = {
				CES = {
					add_opinion_modifier = { target = ERB modifier = wontShootOnsight }
					remove_opinion_modifier = { target = ERB modifier = bitterEnemies }
				}
				add_opinion_modifier = { target = CES modifier = wontShootOnsight }
				remove_opinion_modifier = { target = CES modifier = bitterEnemies }
			}
		}
	}
